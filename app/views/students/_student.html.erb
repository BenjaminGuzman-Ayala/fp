 <style>

th, td {
  font-size: 14px;
}



 </style>
<div id="<%= dom_id student %>">

<div class="accordion-item mb-2">
    <h2 class="accordion-header">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#student<%= student.id %>" aria-expanded="false" aria-controls="student<%=student.id%>">
        <%= student.full_name %>
      </button>
    </h2>
    <div id="student<%= student.id %>" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
      <div class="accordion-body">
        <div id="students">
          <table class="table">
            <thead>
              <%#good candidate for refactoring%>
              <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">School</th>
                <th scope="col">Parent/Guardian First Name</th>
                <th scope="col">Parent/Guardian Last Name</th>
                <th scope="col">Parent/Guardian Relationship</th>
                <th scope="col">Parent/Guardian Phone # </th>
                <th scope="col">Emergency Contact First Name</th>
                <th scope="col">Emergency Contact Last Name</th>
                <th scope="col">Emergency Phone #</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= student.first_name%></td>
                <td><%= student.last_name %></td>
                <td><%= student.school.name %></td>
                <td><%= student.parent_first_name %></td>
                <td><%= student.parent_last_name %></td>
                <td><%= student.parent_relationship %></td>
                <td><%= student.parent_phone_number %></td>
                <td><%= student.emergency_first_name %></td>
                <td><%= student.emergency_last_name %></td>
                <td><%= student.emergency_phone %></td>
                <td>
                  <div>
                    <button class="btn btn-secondary">
                      <%= link_to "Show", student, style: "color:white; text-decoration: none;" %>
                    </button>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>      
      </div>
    </div>
  </div>
</div>
