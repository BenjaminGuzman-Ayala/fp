<div id="<%= dom_id curriculum %>">
<div class="accordion-item">
    <h2 class="accordion-header">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#curriculum<%= curriculum.id %>" aria-expanded="false" aria-controls="curriculum<%=curriculum.id%>">
        <%= curriculum.name %>
      </button>
    </h2>
    <div id="curriculum<%= curriculum.id %>" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
      <div class="accordion-body">
        <div id="curriculums">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Curriculum Name:</th>
                <th scope="col">Grade level:</th>
                <th scope="col">Action:</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= curriculum.name %></td>
                <td><%= curriculum.grade_level %></td>
                <td>
                  <div>
                    <button class="btn btn-secondary">
                      <%= link_to "Show", curriculum, style: "color:white; text-decoration: none;" %>
                    </button>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>      
      </div>
    </div>
  </div>
</div>
